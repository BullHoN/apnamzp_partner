<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.menuitem.MenuItemFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/roboto_bold"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:text="Edit Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/primaryColor"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <ImageView
                android:id="@+id/item_image"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_img"
                android:layout_width="110dp"
                android:layout_height="110dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_marginTop="12dp"
                android:id="@+id/isVeg"
                android:text="Veg "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_marginTop="12dp"
                android:id="@+id/isAvailable"
                android:text="Available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of Item" >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:text="Phala Phala"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Discount" >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/item_discount"
                    android:layout_width="match_parent"
                    android:text="3"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Packeging Charge" >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/item_packeging_charge"
                    android:layout_width="match_parent"
                    android:text="10"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:text="Item Pricings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_pricing_recyclerview"
                android:layout_width="match_parent"
                tools:itemCount="2"
                tools:listitem="@layout/item_editable_pricings"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_changes_button"
                android:layout_marginTop="24dp"
                android:text="Save Changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>