<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:background="@color/primaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/order_delivery_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Preparing" />

                </LinearLayout>

                <TextView
                    android:id="@+id/order_id"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Order Id: #asjsjsdjgsjdgj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:paddingVertical="12dp"
                android:paddingHorizontal="22dp"
                android:background="@color/primaryColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_arrival_time"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:text="7:00 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/order_delivery_type"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/secondaryColor"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="2"
            tools:listitem="@layout/item_order_items"
            android:padding="12dp" />

        <View
            android:background="@color/secondaryColor"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_total_price"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/roboto_bold"
                android:text="Total Bill: $50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_payment_status"
                android:paddingVertical="3dp"
                android:layout_marginLeft="12dp"
                android:paddingHorizontal="18dp"
                android:background="@color/success"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:text="COD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/applied_offer"
                android:paddingVertical="3dp"
                android:layout_marginLeft="12dp"
                android:paddingHorizontal="18dp"
                android:background="@color/primaryColor"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:text="UP631909"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/more_action_button"
                android:layout_gravity="end"
                android:background="@drawable/ic_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/order_next_action_button"
            android:text="Order Ready"
            android:layout_width="match_parent"
            android:clickable="false"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>