<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_gravity="center"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"
        android:text="Please Pay To Continue Your Services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:id="@+id/pending_payment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.google.android.material.checkbox.MaterialCheckBox
            android:checked="true"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pending_payment_text"
            android:textColor="@color/success"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:text="0 your pending pay for this month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/continue_service_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/continue_service_checkbox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/continue_service_text"
            android:textColor="@color/success"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:text="0 to continue our service for next month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="8dp"
        android:id="@+id/pay_button"
        android:backgroundTint="@color/success"
        android:text="Pay Now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>