<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:isScrollContainer="true"
    tools:context=".ui.home.homeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/subscription_expired_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/failure"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="Your Subscription is Expired !!"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/subscription_alert_animation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:lottie_loop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/subscription_expired_container"
            android:visibility="gone"
            android:id="@+id/actionNeededContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/failure"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:text="Urgent Action Needed On Orders"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/alert_action_orders_animation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:lottie_loop="true" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_below="@id/actionNeededContainer"
            android:id="@+id/shop_status_container"
            android:paddingHorizontal="12dp"
            android:background="#B30C00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_status_image"
                android:src="@drawable/ic_closed"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shop_status_button"
                    android:textColor="@color/failure"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="24sp"
                    android:text="SHOP CLOSED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/orders_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_status_container"
            android:paddingHorizontal="12dp"
            app:chipSpacingHorizontal="24dp"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/all_filter"
                style="@style/My_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preparing_filter"
                style="@style/My_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Preparing" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ready_filter"
                style="@style/My_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready" />

            <com.google.android.material.chip.Chip
                android:id="@+id/completed_filter"
                style="@style/My_Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed" />

        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:id="@+id/order_items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orders_filter"
            android:layout_marginTop="12dp"
            android:isScrollContainer="false"
            android:paddingHorizontal="8dp"
            tools:itemCount="3"
            tools:listitem="@layout/item_orders" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/orders_not_found_animation"
            app:lottie_loop="true"
            android:layout_width="250dp"
            android:layout_height="250dp" />

    </RelativeLayout>

</ScrollView>